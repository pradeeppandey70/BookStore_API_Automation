{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "books": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "isbn": { "type": "string" },
          "title": { "type": "string" },
          "author": { "type": "string" },
          "publish_date": { "type": "string" }
        },
        "required": ["isbn", "title", "author"]
      }
    }
  },
  "required": ["books"]
}
